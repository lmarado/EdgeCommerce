<config>
    
    <modules>
        <Edge_Reports>
            <version>1.0.0</version>
        </Edge_Reports>
    </modules>
    
    <global>
        <resources>
            <edge_reports_setup>
                <setup>
                    <module>Edge_Reports</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </edge_reports_setup>
        </resources>
        
        <models>
            <catalog>
                <rewrite>
                    <product_link>Edge_Reports_Model_Catalog_Product_Link</product_link>
                    <product>Edge_Reports_Model_Catalog_Product</product>
                </rewrite>
            </catalog>
            <edge_reports>
                <class>Edge_Reports_Model</class>
                <resourceModel>edge_supplier_resource</resourceModel>
            </edge_reports>
            <edge_reports_resource>
                <class>Edge_Reports_Model_Resource</class>
                <deprecatedNode>edge_supplier_mysql4</deprecatedNode>
                <entities>
                    <topsuppliers_aggregated_daily>
                        <table>topsuppliers_aggregated_daily</table>
                    </topsuppliers_aggregated_daily>
                    <topsuppliers_aggregated_monthly>
                        <table>topsuppliers_aggregated_monthly</table>
                    </topsuppliers_aggregated_monthly>
                    <topsuppliers_aggregated_yearly>
                        <table>topsuppliers_aggregated_yearly</table>
                    </topsuppliers_aggregated_yearly>
                </entities>
            </edge_reports_resource>
        </models>
        
        <helpers>
            <edge_supplier>
                <class>Edge_Reports_Helper</class>
            </edge_supplier>
        </helpers>
        
        <blocks>
            <edge_supplier>
                <class>Edge_Reports_Block</class>
            </edge_supplier>
            
            <adminhtml>
                <rewrite>
                    <permissions_user_edit_tab_roles>Edge_Reports_Block_Adminhtml_Permissions_User_Edit_Tab_Roles</permissions_user_edit_tab_roles>
                    <permissions_user_edit_tabs>Edge_Reports_Block_Adminhtml_Permissions_User_Edit_Tabs</permissions_user_edit_tabs>
                    <catalog_product_edit_tab_related>Edge_Reports_Block_Adminhtml_Catalog_Product_Edit_Tab_Related</catalog_product_edit_tab_related>
                    <catalog_product_edit_tab_upsell>Edge_Reports_Block_Adminhtml_Catalog_Product_Edit_Tab_Upsell</catalog_product_edit_tab_upsell>
                    <catalog_product_edit_tab_crosssell>Edge_Reports_Block_Adminhtml_Catalog_Product_Edit_Tab_Crosssell</catalog_product_edit_tab_crosssell>
                    <catalog_product_edit_tab_attributes>Edge_Reports_Block_Adminhtml_Catalog_Product_Edit_Tab_Attributes</catalog_product_edit_tab_attributes>
                    <catalog_product_edit_tabs>Edge_Reports_Block_Adminhtml_Catalog_Product_Edit_Tabs</catalog_product_edit_tabs>
                    <catalog_product_grid>Edge_Reports_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                    <!--
                    <sales_order_create_search_grid>Edge_Reports_Block_Adminhtml_Sales_Order_Create_Search_Grid</sales_order_create_search_grid>
                    <report_refresh_statistics>Edge_Reports_Block_Adminhtml_Report_Refresh_Statistics</report_refresh_statistics>
                    <report_refresh_statistics_grid>Edge_Reports_Block_Adminhtml_Report_Refresh_Statistics_Grid</report_refresh_statistics_grid>
                    -->
                </rewrite>
            </adminhtml>
        </blocks> 
               
        <events>
            <admin_user_save_after>
                <observers>
                    <edge_supplier>
                        <class>edge_supplier/observer</class>
                        <method>afterAdminUserSave</method>
                    </edge_supplier>
                </observers>
            </admin_user_save_after>
            
            <admin_user_delete_before>
                <observers>
                    <edge_supplier>
                        <class>edge_supplier/observer</class>
                        <method>beforeAdminUserDelete</method>
                    </edge_supplier>
                </observers>
            </admin_user_delete_before>
            
            <catalog_product_save_before>
                <observers>
                    <edge_supplier>
                        <class>edge_supplier/observer</class>
                        <method>beforeCatalogProductSave</method>
                    </edge_supplier>
                </observers>
            </catalog_product_save_before>
            
        </events>
        
    </global>
