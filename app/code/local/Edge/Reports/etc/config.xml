        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Edge_Reports before="Mage_Adminhtml">Edge_Reports_Adminhtml</Edge_Reports>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <edge_supplier>
                    <file>edge_reports.xml</file>
