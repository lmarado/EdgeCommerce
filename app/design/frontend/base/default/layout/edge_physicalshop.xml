<layout version="0.1.0">
    <default>
        <reference name="footer_links">
            <action method="addLink" translate="label title" module="edge_physicalshop" ifconfig="physicalshop/view/enabled">
                <label>Physical Shop</label>
                <url>physicalshop</url>
                <title>Physical Shop</title>
                <prepare>true</prepare>
            </action>
        </reference>
    </default>

    <edge_physicalshop_index_index translate="label">
        <label>Physical Shop Page</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="magentostudy_news">
                <title>Site Physical Shop</title>
            </action>
        </reference>
        <reference name="content">
            <block type="edge_physicalshop/list" name="news.list" template="edge/physicalshop/list.phtml">
                <block type="page/html_pager" name="news.list.pager" as="physicalshop_list_pager" />
            </block>
        </reference>
    </edge_physicalshop_index_index>

    <edge_physicalshop_index_view translate="label">
        <label>Physical Shop Item Page</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="edge_physicalshop/item" name="news.item" template="edge/physicalshop/item.phtml" />
        </reference>
    </edge_physicalshop_index_view>
</layout>